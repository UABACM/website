{
  "hosting": {
    "public": "main",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects" : [
      {
        "source": "/tshirt",
        "destination": "https://forms.gle/9nAj2zpoa3FaXgee9",
        "type": 302
      }, 
      {
        "source": "/discord",
        "destination": "https://discord.gg/3VrGNUunWa",
        "type": 302
      }
    ],
    "headers": [
      {
        "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          }
        ]
      },
      {
        "source": "**/*.@(css|jpg|jpeg|gif|png|eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=604800"
          }
        ]
      },
      {
        "source": "404.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=960000"
          }
        ]
      }
    ]
  }
}
